<form method="POST" style="width: 80%;">
    <div class="row">
        <div class="col">
            <label for='name'>Name</label>
            <input type=text id='name' name='name' class='form-control' value={{animal.name}}>
        </div>
        <div class="col">
            <label for='species'>Species</label>
            <select class="form-control" id="species" name="species" value={{animal.species}}>
                <option>Cat</option>
                <option>Dog</option>
                <option>Fish</option>
                <option>Bird</option>
                <option>Hamster</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <label for='dob'>Date of Birth</label>
            <input type=text id='dob' name='dob' class='form-control' value={{animal.dob}}>
        </div>
        <div class="col">
            <label for='hobbies'>Hobbies</label>
            <input type=text id='hobbies' name='hobbies' class='form-control' value={{animal.hobbies}}>
        </div>
    </div>

    {{!-- This hidden element lets us use the document id --}}
    <div style="margin-top: 20px;">
        <input type="hidden" id="id" name="_id" value="{{animal._id}}" />
        <button type=submit class="btn btn-primary">Save Changes</button>
        <a href='/animals/{{animal.name}}'><button type=button class="btn btn-outline-danger">Cancel</button></a>
    </div>
</form>